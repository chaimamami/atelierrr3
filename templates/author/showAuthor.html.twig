{# templates/author/showAuthor.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <title>Author Details</title>
</head>
<body>
<h1>Author Details</h1>
{%if author.id==1%}

<img src="{{author.picture}}" alt="{{ author.username }}">

<p>Name: {{ author.username }}</p>
<p>Email: {{ author.email }}</p>
<p>Number of Books: {{ author.nb_books }}</p>

{%endif%}


{%if t.id==2%}

<img src="{{t.picture}}" alt="{{ t.username }}">

<p>Name: {{ t.username }}</p>
<p>Email: {{ t.email }}</p>
<p>Number of Books: {{ t.nb_books }}</p>

{%endif%}


{%if m.id==3%}

<img src="{{m.picture}}" alt="{{ m.username }}">

<p>Name: {{ m.username }}</p>
<p>Email: {{ m.email }}</p>
<p>Number of Books: {{ m.nb_books }}</p>

{%endif%}
